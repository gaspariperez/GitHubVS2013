
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/Style/HomeStyleSheet.css" rel="stylesheet" type="text/css" />

@using System.Web.UI.HtmlControls
@using System.Web.UI.WebControls
@model FedoRomance.Web.Models.RegisterModel
@using (Html.BeginForm("Register")) {
    <div>
        <p>
            Name:
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </p>

        <p>
            Age:
            @Html.DropDownListFor(model => model.Age, (IEnumerable<SelectListItem>)ViewData["Age"])
        </p>
        
        <p>
            Gender:
            @Html.DropDownListFor(model => model.Gender, (IEnumerable<SelectListItem>)ViewData["Gender"])
        </p>
        
        <p>
            About:
            @Html.TextBoxFor(model => model.About)
        </p>
        
        <p>
            Username: 
            @Html.TextBoxFor(model => model.Username)
            @Html.ValidationMessageFor(model => model.Username)
        </p>
        
        <p>
            Password:
            @Html.TextBoxFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </p>
        
        <p>
            @Html.CheckBoxFor(model => model.BoolValue) Jag vill inte vara sökbar.
        </p>

        <p>
            <input type="submit" value="Registrera!" id="registerButton"/>
        </p>

    </div>

}