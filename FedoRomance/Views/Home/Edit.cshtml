
@{
    ViewBag.Title = "Edit";
}

<link href="/Style/HomeStyleSheet.css" rel="stylesheet" type="text/css" />

@model FedoRomance.Web.Models.EditModel
@using (Html.BeginForm("Edit")) {
    <div>
        <p>
            Name:
            @Html.TextBoxFor(model => model.Name, new { @maxlength = 50 })
            @Html.ValidationMessageFor(model => model.Name)
        </p>

        <p>
            Age:
            @Html.DropDownListFor(model => model.Age, (IEnumerable<SelectListItem>)ViewData["Age"])
        </p>

        <p>
            Gender:
            @Html.DropDownListFor(model => model.Gender, (IEnumerable<SelectListItem>)ViewData["Gender"])
        </p>

        <p>
            About:
            <br/>
            @Html.TextAreaFor(model => model.About, new {@class="aboutTextBox", @maxlength = 150 })
        </p>
        
        <p>
            Password:
            @Html.PasswordFor(model => model.Password, new { @maxlength = 20 })
            @Html.ValidationMessageFor(model => model.Password)
        </p>
        <p>
            Confirm password:
            @Html.PasswordFor(model => model.PasswordMatch, new { @maxlength = 20 })
            @Html.ValidationMessageFor(model => model.PasswordMatch)
        </p>

        <p>
            @Html.CheckBoxFor(model => model.BoolValue) Jag vill inte vara sökbar.
        </p>
        
        <p>
            <input type="submit" value="Spara ändringar" id="editButton" />
        </p>

    </div>

}