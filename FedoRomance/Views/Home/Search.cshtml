
@{
    ViewBag.Title = "Search";
}



@model FedoRomance.Web.Models.SearchModel           

@using (Html.BeginForm("Search")) {
    <div>
        <h2>Search</h2>
        
        <p>
            Name:
            @Html.TextBoxFor(m => m.Name)
        </p>


        <p>
            Age:
            @Html.DropDownList("Age", null, "Min")
            @Html.DropDownList("Age", null, "Max")
        </p>

        <p>
            Region:
            @Html.DropDownList("Region", null, "Select region")
        </p>

        <p>


            Gender:
            @Html.CheckBox("Male") Male
            @Html.CheckBox("Female") Female
        </p>

        <p>
            <input type="submit" value="Search" id="searchButton"/>
        </p>
        
        <input type="text"/ id="resultsTextBox">
        
        Results: @Html.TextBox("Result")
        

    </div>

}