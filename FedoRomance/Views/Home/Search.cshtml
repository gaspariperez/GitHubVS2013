
@{
    ViewBag.Title = "Search";
}

<link href="/Style/HomeStyleSheet.css" rel="stylesheet" type="text/css" />

@using FedoRomance.Data
@model FedoRomance.Web.Models.SearchModel           

@using (Html.BeginForm("Search")) {
    <div>
        <h2>Search</h2>
        
        <p>
            Name:
            @Html.TextBoxFor(model => model.Name)
        </p>


        

        <p>
            <input type="submit" value="Search" id="searchButton"/>
        </p>
        
        Results:
        
        <br/>

        @if (ViewData["Result"] != null)
        {
            @Html.ListBox("List", (IEnumerable<SelectListItem>)ViewData["Result"], new {@id="searchResultListBox"})
        }

    </div>

}